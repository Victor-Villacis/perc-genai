{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "DOM",
            "ES6",
            "ES2017",
            "ESNext.AsyncIterable"
        ],
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}